\begin_inset Formula 
\[
\mu_{1}=\frac{\delta}{x_{I}+\delta},\quad\mu_{\omega}=\frac{x_{I}}{x_{I}+\delta}
\]

\end_inset

Further, we have:
\begin_inset Formula 
\[
\delta\mu_{\omega}-x_{e,1}\mu_{1}+x_{e,1}\mu_{e,1}-x_{I}\mu_{1}=0
\]

\end_inset

which simply gives:
\begin_inset Formula 
\[
\mu_{e,1}=\mu_{1}
\]

\end_inset

Now the overall inventor demand is:
\begin_inset Formula 
\begin{align*}
x_{e,1}\mu_{e,1}+\alpha_{I}\frac{x_{I}^{\gamma}}{\gamma}\mu_{1} & =\mu_{1}x_{I}\left(\frac{x_{e,1}}{x_{I}}+\alpha_{I}\frac{x_{I}^{\gamma-1}}{\gamma}\right)\\
x_{e,1}\mu_{e,1}+\alpha_{I}\frac{x_{I}^{\gamma}}{\gamma}\mu_{1} & =\mu_{1}\left(x_{e,1}+\alpha_{I}\frac{x_{I}^{\gamma}}{\gamma}\right)
\end{align*}

\end_inset

With derivative:
\begin_inset Formula 
\[
\mu'_{1}\left(x_{e,1}+\alpha_{I}\frac{x_{I}^{\gamma}}{\gamma}\right)+\mu_{1}\left(x'_{e,1}+\alpha_{I}x_{I}^{\gamma-1}x'_{I}\right)
\]

\end_inset

so we need:
\begin_inset Formula 
\[
\frac{\mu'_{1}}{\mu_{1}}=-\frac{x'_{e,1}+\alpha_{I}x_{I}^{\gamma-1}x'_{I}}{x_{e,1}+\alpha_{I}\frac{x_{I}^{\gamma}}{\gamma}}
\]

\end_inset

Now:
\begin_inset Formula 
\[
\frac{\mu'_{1}}{\mu_{1}}=-\frac{\delta x'_{I}}{\left(x_{I}+\delta\right)^{2}}\frac{\left(x_{I}+\delta\right)}{\delta}=-\frac{x'_{I}}{\left(x_{I}+\delta\right)}
\]

\end_inset

Or:
\begin_inset Formula 
\begin{align*}
x'_{I}\frac{x_{e,1}+\alpha_{I}\frac{x_{I}^{\gamma}}{\gamma}}{\left(x_{I}+\delta\right)} & =x'_{e,1}+\alpha_{I}x_{I}^{\gamma-1}x'_{I}\\
\mu_{\omega}x'_{I}\left(x_{e,1}+\alpha_{I}\frac{x_{I}^{\gamma}}{\gamma}\right) & =x'_{e,1}x_{I}+x'_{I}\alpha_{I}x_{I}^{\gamma}\\
\left(x_{e,1}+\alpha_{I}\frac{x_{I}^{\gamma}}{\gamma}\right)x'_{I}-L^{RD}x'_{I} & =x'_{e,1}x_{I}+x'_{I}\alpha_{I}x_{I}^{\gamma}\\
x_{e,1}x'_{I}+\alpha_{I}\frac{x_{I}^{\gamma}}{\gamma}x'_{I}-x'_{e,1}x_{I}-\alpha_{I}x_{I}^{\gamma}x'_{I} & =L^{RD}x'_{I}
\end{align*}

\end_inset


\end_layout

\end_inset


\end_layout

\begin_layout Subsection
Full Description of the Two-Sector Model and Derivations
\begin_inset CommandInset label
