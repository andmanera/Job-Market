\begin_deeper
\begin_layout Standard
\begin_inset CommandInset label
LatexCommand label
name "appendix: CGDef"

\end_inset


\begin_inset CommandInset label
LatexCommand label
name "prop: partialEq-1"

\end_inset


\end_layout

\begin_layout Definition*
A constant-growth equilibrium is a set of prices 
\begin_inset Formula $p(i)$
\end_inset

, investment intensities 
\begin_inset Formula $x_{I},x_{e,\omega},x_{e,1}$
\end_inset

, and normalized values 
\begin_inset Formula $v(\omega),v(1)$
\end_inset

, such that, given a wage for production and R&D workers, incumbent and
 entrants optimally choose research intensities, the stationary distribution
 satisfies:
\begin_inset Formula 
\begin{align*}
0 & =-\left(x_{I}+x_{e,1}\right)\mu_{1}+\delta\mu_{\omega}+x_{e,\omega}\mu_{e,\omega}+x_{e,1}\mu_{e,1},\\
0 & =-\left(x_{e,\omega}+\delta\right)\mu_{\omega}+x_{I}\mu_{1},\\
0 & =-\left(x_{e,1}+x_{I}\right)\mu_{e,1}+x_{e,1}\mu_{1}+\delta\mu_{e,\omega},\\
0 & =-\left(x_{e,\omega}+\delta\right)\mu_{e,\omega}+x_{e,\omega}\mu_{\omega}+x_{I}\mu_{e,1}.
\end{align*}

\end_inset

and output grows at a constant rate, 
\begin_inset Formula $g$
\end_inset

.
\end_layout

\end_deeper
\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Frame
\begin_inset Argument 4
status open

\begin_layout Plain Layout
Stationary Distribution 
\begin_inset ERT
status open

\begin_layout Plain Layout


\backslash
hyperlink{button: BackToGrowth}{
\backslash
beamergotobutton{Back}}
\end_layout

\end_inset


\end_layout

\end_inset


\end_layout

\begin_deeper
\begin_layout Standard
\begin_inset CommandInset label
LatexCommand label
name "appendix: StatDist"

\end_inset


\end_layout

\begin_layout Standard
LOM:
\begin_inset Formula 
\begin{align*}
\dot{\mu}_{1} & =-\left(x_{I}+x_{e,1}\right)\mu_{1}+\delta\mu_{\omega}+x_{e,\omega}\mu_{e,\omega}+x_{e,1}\mu_{e,1},\\
\dot{\mu}_{\omega} & =-\left(x_{e,\omega}+\delta\right)\mu_{\omega}+x_{I}\mu_{1},\\
\dot{\mu}_{e,1} & =-\left(x_{e,1}+x_{I}\right)\mu_{e,1}+x_{e,1}\mu_{1}+\delta\mu_{e,\omega},\\
\dot{\mu}_{e,\omega} & =-\left(x_{e,\omega}+\delta\right)\mu_{e,\omega}+x_{e,\omega}\mu_{\omega}+x_{I}\mu_{e,1}.
\end{align*}

\end_inset


\begin_inset Formula 
\begin{align*}
\mu_{\omega} & =\frac{x_{I}}{x_{I}+x_{e,\omega}+\delta},\quad & \mu_{1}=\frac{x_{e,\omega}+\delta}{x_{I}+x_{e,\omega}+\delta},\\
\mu_{e,\omega} & =\frac{\omega x_{I}\mu_{1}+\left(\omega x_{e,\omega}+x_{I}\right)\mu_{\omega}}{\omega\left(x_{e,\omega}+\delta\right)+x_{I}},\quad & \mu_{e,1}=\frac{\omega\left(x_{e,\omega}+\delta\right)\mu_{1}+\delta\mu_{\omega}}{\omega\left(x_{e,\omega}+\delta\right)+x_{I}}.
\end{align*}

\end_inset


\end_layout

\end_deeper
\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Note Note
status collapsed

