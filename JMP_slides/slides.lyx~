\begin_deeper
\begin_layout Itemize
Incumbents' normalized values 
\begin_inset Formula $v=\frac{V\left(\Omega\right)}{Y}$
\end_inset

 with constant output growth:
\begin_inset ERT
status open

\begin_layout Plain Layout


\backslash
pause
\end_layout

\end_inset


\begin_inset Formula 
\begin{align*}
\rho v(1) & =\max_{x_{I}}\left(\frac{\phi-1}{\phi}\right)-\alpha_{I}\frac{x_{I}^{\gamma}}{\gamma}+x_{I}\left(v(\bm{\omega})-v(1)\right)-x_{e,1}\left(v(1)\right)\\
\rho v(\bm{\omega}) & =\left(\frac{\phi-1}{\phi}\right)+\delta\left(v(1)-v(\bm{\omega})\right)-x_{e,\bm{\omega}}\left(v(\bm{\omega})\right)
\end{align*}

\end_inset


\end_layout

\begin_layout Itemize
\begin_inset Formula $x_{e,1},x_{e,\omega}$
\end_inset

: total research intensity of entrants 
\end_layout

\begin_layout Itemize
\begin_inset Formula $\delta$
\end_inset

: depreciation of patent wall (patent protection)
