\begin_layout Itemize
Incumbent: unit cost 
\begin_inset Formula $\frac{c_{t}(i)}{\phi},$
\end_inset

 
\begin_inset Formula $\phi>1$
\end_inset

; or
\begin_inset ERT
status open

\begin_layout Plain Layout


