\begin_deeper
\begin_layout Standard
Parameters obtained from data directly: 
\begin_inset CommandInset label
LatexCommand label
name "Calibration-Strategy"

\end_inset


\begin_inset Formula 
\[
\left(\frac{p_{R}}{w}\right)_{2010},\left(\frac{p_{R}}{w}\right)_{2014},\delta,\rho
\]

\end_inset


\end_layout

\begin_layout Standard
Parameters calibrated by directly matching a moment:
\end_layout

\begin_layout Itemize
\begin_inset Formula $\xi_{s}$
\end_inset

: share of manufacturing value added from BEA
\end_layout

\begin_layout Itemize
\begin_inset Formula $\theta_{s}$
\end_inset

: average production line employees' share of manufacturing value added
 before 1980
\end_layout

\begin_layout Standard
Other parameters:
\end_layout

\begin_layout Itemize
\begin_inset Formula $\sigma_{z,s},\theta_{z,s}$
\end_inset

: fit CIR process by ML on TFP residual from Compustat Data 
\begin_inset ERT
status open

\begin_layout Plain Layout


\backslash
hyperlink{appendix: CIR}{
\backslash
beamergotobutton{Details}}
\end_layout

\end_inset


\end_layout

\begin_layout Itemize
\begin_inset Formula $\psi_{R}/w$
\end_inset

: match increase in aggregate robot adoption between 2010 and 2014, assuming
 limit case 
\begin_inset ERT
status open

\begin_layout Plain Layout


\backslash
hyperlink{appendix: psi}{
\backslash
beamergotobutton{Details}}
\end_layout

\end_inset

 
\end_layout

\begin_layout Itemize
\begin_inset Formula $\Gamma_{s}$
\end_inset

: given 
\begin_inset Formula $\psi_{R}/w$
\end_inset

, match penetrations in 2014 
\begin_inset ERT
status open

\begin_layout Plain Layout


\backslash
hyperlink{appendix: gamma}{
\backslash
beamergotobutton{Details}}
\end_layout

\end_inset


\end_layout

