\begin_deeper
\begin_layout Standard
Prices
\series bold
 
\begin_inset Formula $\left(w,\left(p_{s}\right)_{s=1}^{13}\right)$
\end_inset

 
\series default
clear all markets:
\end_layout

\begin_layout Itemize

\series bold
Labor Market
\series default
:
\begin_inset Formula 
\[
\ell^{\star}=\sum_{s=1}^{13}\int_{0}^{\infty}L_{s}^{d}\left(R,z\right)dG_{s}\left(R,z\right)
\]

\end_inset


\end_layout

\begin_layout Itemize

\series bold
Intermediate Goods
\series default
:
\begin_inset Formula 
\[
x_{s}=\xi_{s}\frac{Y/A^{F}}{p_{s}}\qquad\forall s=1,\dots,13
\]

\end_inset


\end_layout

\begin_layout Itemize

\series bold
Final Good: 
\series default
excluded by Walras Law, numeraire
\end_layout

\begin_layout Standard
Note: robot sector is excluded and 
\begin_inset Formula $p_{R}/w$
\end_inset

 is 
\series bold
exogenous
\series default
.
