\begin_layout Frame
\begin_inset Argument 4
status open

\begin_layout Plain Layout
Main Result (No Full Automation)
\end_layout

\end_inset


\end_layout

\begin_deeper
\begin_layout Proposition*
For any purchase price of robots 
\begin_inset Formula $p_{R}$
\end_inset

, as long as 
\begin_inset Formula $\delta>0$
\end_inset

, there exists a finite value of the adjustment cost parameter 
\begin_inset Formula $\psi_{R}$
\end_inset

 such that the stationary distribution 
\begin_inset Formula $G\left(R,z\right)$
\end_inset

 does not feature full automation.
\end_layout

\begin_layout Standard
Intuition:
\end_layout

\begin_layout Itemize
Ergodic set for 
\begin_inset Formula $R$
\end_inset

 is bounded from above: if 
\begin_inset Formula $\delta>0$
\end_inset

, we show that the stationary distribution has support within:
\begin_inset Formula 
\[
\left[R^{\star}\left(z_{\min}\right),R_{\max}^{\star}\right]\times\mathcal{Z}
\]

\end_inset


\end_layout

\begin_layout Itemize
All firms with shocks better than 
\begin_inset Formula $\check{z}\equiv\bar{R}^{-1}\left(R_{\max}^{\star}\right)$
\end_inset

 hire labor.
\end_layout

\begin_layout Itemize
Can always find 
\begin_inset Formula $\psi_{R}$
\end_inset

 high enough so that 
\begin_inset Formula $1-F\left(\check{z}\right)>0$
\end_inset


\end_layout

\end_deeper
\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

