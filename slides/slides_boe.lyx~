\begin_layout Section
Extensions
\end_layout

\begin_layout Subsection
Rigid Labor
\end_layout

\begin_layout Frame
\begin_inset Argument 4
status open

\begin_layout Plain Layout
Beyond Perfectly Flexible Labor
\end_layout

\end_inset


\end_layout

\begin_layout Frame

\end_layout

\begin_deeper
\begin_layout Standard
Adjusting labor is not frictionless.
 Introduce:
\end_layout

\begin_layout Itemize
reduced form labor adjustment costs
\end_layout

\begin_layout Itemize
partial equilibrium, i.e., fix wage 
\begin_inset Formula $w$
\end_inset


\begin_inset VSpace medskip
\end_inset


\end_layout

\begin_layout Standard
Firms choose utilization rates 
\begin_inset Formula $u_{L}$
\end_inset

 and 
\begin_inset Formula $u_{R}$
\end_inset

:
\begin_inset Formula 
\[
\Pi\left(R,L,z\right)=\max_{0\leq u_{L},u_{R}\leq1}\ pz\left(\Gamma u_{L}L+\left(1-\Gamma\right)u_{R}R\right)^{\theta}-mu_{R}R-wL
\]

\end_inset

Dynamic problem:
\size small

\begin_inset Formula 
\begin{alignat*}{1}
\rho V\left(R,L,z\right)=\max_{I_{R},I_{L}}\  & \Pi\left(R,L,z\right)-p_{R}I_{R}-\frac{\psi_{R}}{2}I_{R}^{2}+\left(I_{R}-\delta R\right)V_{R}\left(R,L,z\right)+\\
 & -\frac{\psi_{L}}{2}I_{L}^{2}+\left(I_{L}-sL\right)V_{L}\left(R,L,z\right)+\text{Ito Terms}
\end{alignat*}

\end_inset


\end_layout

\end_deeper
\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Frame
\begin_inset Argument 4
status open

\begin_layout Plain Layout
